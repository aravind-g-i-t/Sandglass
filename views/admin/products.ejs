            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                        
                    </div>
                    <form method="get" class="searchform">
                        <div class="input-group">
                            <input name="searchProduct" list="search_terms" type="text" class="form-control" placeholder="Search">
                            <button class="btn btn-light bg" type="submit"> <i class="material-icons md-search"></i></button>
                        </div>
                        
                    </form>
                    <div>
                        
                        <a href="/admin/add_product" class="btn btn-primary btn-sm rounded">Create new</a>
                    </div>
                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check ms-2">
                                    <input class="form-check-input" type="checkbox" value="">
                                </div>
                            </div>
                            <div class="col-md-2 col-6 me-auto mb-md-0 mb-3">
                                <select class="form-select">
                                    <option selected>All category</option>
                                    <option>Electronics</option>
                                    <option>Clothes</option>
                                    <option>Automobile</option>
                                </select>
                            </div>
                            
                            <div class="col-md-2 col-6 me-auto mb-md-0 mb-3">
                                <select class="form-select">
                                    <option selected>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                        </div>
                    </header> <!-- card-header end// -->
                    <div class="card-body">
                        <%if(products){%>
                        <%products.forEach(product=>{%>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col col-check flex-grow-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                    <a class="itemside" href="#">
                                        <div class="left">
                                            <img src="/uploads/<%=(product.productImage && product.productImage.length>0)?product.productImage[0]:'default-image.jpg'%>" class="img-sm img-thumbnail" alt="Item">
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0"><%=product.productName%></h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-1 col-sm-1 col-4 col-price"> <span>₹<%=product.finalPrice%></span> </div>
                                <div class="col-lg-1 col-sm-1 col-4 col-status">
                                    <span class="badge rounded-pill alert-<%=(product.isActive)?'success':'danger'%>"><%=(product.isActive)?'Active':'Blocked'%></span>
                                </div>
                                <div class="col-lg-3 col-sm-3 col-4 col-date">
                                    <span><%=product.createdAt.toLocaleString()%></span>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <a href="/admin/edit_product?id=<%=product._id%>" class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <a href="/admin/product_status_update?id=<%=product._id%>" class="btn btn-sm font-sm btn-light rounded">
                                        <i class="material-icons md-delete_forever"></i> <%=(product.isActive)?'Hide':'Unhide'%>
                                    </a>
                                </div>
                            </div> <!-- row .// -->
                        </article>
                        <%})%>
                        <%}%> <!-- itemlist  .// -->
                         <!-- itemlist  .// -->
                    </div> <!-- card-body end// -->
                </div> <!-- card end// -->
