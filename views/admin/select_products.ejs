    <script>
        async function addOffer(productId) {
            const offerId = document.getElementById('offerId').value;
    
            try {
                const response = await fetch('/admin/add_offer_product', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ offerId, productId })
                });
    
                if (response.ok) {
                    // Change button to "Remove Offer"
                    const button = document.getElementById(`offer-btn-${productId}`);
                    button.textContent = 'Remove Offer';
                    button.classList.remove('btn-primary');
                    button.classList.add('btn-danger');
                    button.onclick = () => removeOffer(productId);
                } else {
                    alert('Failed to add offer.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while adding the offer.');
            }
        }
    
        async function removeOffer(productId) {
            const offerId = document.getElementById('offerId').value;
    
            try {
                const response = await fetch('/admin/remove_offer_product', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ offerId, productId })
                });
    
                if (response.ok) {
                    // Change button to "Add Offer"
                    const button = document.getElementById(`offer-btn-${productId}`);
                    button.textContent = 'Add Offer';
                    button.classList.remove('btn-danger');
                    button.classList.add('btn-primary');
                    button.onclick = () => addOffer(productId);
                } else {
                    alert('Failed to remove offer.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while removing the offer.');
            }
        }
    </script>
        
        
